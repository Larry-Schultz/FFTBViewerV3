#!/bin/bash

# Global run script for deployment compatibility
# This script is placed in /usr/local/bin to be found by deployment commands

PROJECT_DIR="/home/runner/workspace"

# Change to project directory and execute the local run/start script
if [ -f "$PROJECT_DIR/pom.xml" ]; then
    cd "$PROJECT_DIR"
    if [ -f "./start.sh" ]; then
        exec ./start.sh "$@"
    elif [ -f "./run" ]; then
        exec ./run "$@" 
    else
        echo "ERROR: No run script found in project directory"
        exit 1
    fi
else
    echo "ERROR: Project directory not found at $PROJECT_DIR"
    exit 1
fi