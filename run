#!/bin/bash

# Simple run script for Replit deployment
# This is the entry point for the application

set -e

echo "=== Twitch Chat Reader Deployment ==="
echo "Timestamp: $(date)"

# Ensure script permissions and use direct execution
chmod +x deployment/start-app.sh 2>/dev/null || true

# Use direct start script to avoid permission issues
exec bash deployment/start-app.sh